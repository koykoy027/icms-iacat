@import "abstracts/_variable";
@import "components/modals";
@import "utilities/color";
.p2-10 {
    padding: 2px 10px;
}

body,
html {
    margin: 0;
    padding: 0;
    height: 100%;
    background: #6c757d !important;
}

.user_card {
    height: 505px;
    width: 442px;
    margin-top: auto;
    margin-bottom: auto;
    background: #343c48;
    position: relative;
    display: flex;
    justify-content: center;
    flex-direction: column;
    padding: 20px;
    /*
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  -webkit-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
    0 6px 20px 0 rgba(0, 0, 0, 0.19);
  -moz-box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2),
    0 6px 20px 0 rgba(0, 0, 0, 0.19);
  border-radius: 5px;
  */
}

a {
    text-decoration: none;
    & :hover {
        text-decoration: none;
    }
}

.brand_logo_container {
    position: absolute;
    height: 170px;
    width: 170px;
    top: -75px;
    border-radius: 50%;
    background: #f8f9fa;
    padding: 10px;
    text-align: center;
}

.brand_logo {
    height: auto;
    width: 190px;
    /*        border-radius: 50%;
            border: 2px solid white;*/
}

.brand_logo2 {
    height: auto;
    width: 140px;
}

.form_container {
    margin-top: 100px;
}

.login_btn {
    width: 100%;
    background: #333c48 !important;
    color: white !important;
}

.login_btn:focus {
    box-shadow: none !important;
    outline: 0px !important;
}

.login_container {
    padding: 0 2rem;
}

.input-group-text {
    background: #333c48 !important;
    color: white !important;
    border: 0 !important;
    border-radius: 0.25rem 0 0 0.25rem !important;
}

.input_user,
.input_pass:focus {
    box-shadow: none !important;
    outline: 0px !important;
}

.custom-checkbox .custom-control-input:checked ~ .custom-control-label::before {
    background-color: #c0392b !important;
}

.bg_card {
    float: right;
    background: #333c48;
    height: 100%;
}

.input_user,
.input_pass {
    height: 45px;
    border-radius: 21px;
}

.form-control:focus {
    color: #495057;
    background-color: #fff;
    border-color: #e88f13;
    outline: 0;
    box-shadow: 0 0 0 0.2rem #e88f1303 !important;
}

.login_btn {
    width: 110px;
    border-radius: 25px;
    float: right;
    background: #e88f13 !important;
}

.mt-4 {
    height: 50px;
    background: #e9ecef;
    position: relative;
    top: 31px;
    left: -10px;
    width: 500px;
    /*
  border-bottom-right-radius: 4px;
  border-bottom-left-radius: 4px;
  */
}

.forgot-pw {
    position: relative;
    top: 24px;
    color: #356396;
    text-transform: uppercase;
    font-size: 13px;
}

.sign_in-card {
    /* position: relative; */
    left: -10px;
    /* top: 155px; */
    width: 500px;
    height: 505px;
    background: #fff;
    /* bottom: 40px; */
}

.d-flex {
    padding: 23px;
    position: relative;
    bottom: 30px;
}

.card-title {
    position: relative;
    font-size: 33px;
    font-family: source sans pro, sans-serif;
    font-weight: 600;
    color: #323c48;
}

.bg-card-orange {
    float: right;
    background: #ffb011;
    height: 100%;
    width: 113px;
    border-radius: unset !important;
    box-shadow: unset;
}

.bg-card-dBlue {
    float: right;
    background: #333c48;
    height: 100%;
    width: 50%;
    border-radius: unset !important;
}

.card-subtitle {
    color: #fff;
    font-size: 16px;
    position: relative;
    bottom: 16px;
}

.int_card-title {
    text-align: center;
    color: #badbff;
    font-weight: 650;
}

.mt-3 {
    text-align: center;
    position: relative;
    bottom: 20px;
}

.bg-upper {
    background: #3e5067c4;
    transform: rotate(231deg);
    position: fixed;
    right: 100px;
    bottom: 333px;
    display: none;
}

.toggle-password_icon {
    float: right;
    margin-left: -25px;
    margin-top: -25px;
    position: relative;
    z-index: 2;
    right: 15px;
    font-size: 14px;
}

.show-color {
    color: #e88f13;
    font-weight: 600;
    font-size: 16px;
}

div.error {
    color: red;
    display: contents;
}

.msgmodal-warning-footer {
    background: #ef910f !important;
    border-radius: 0;
    text-align: center;
}

.btn-close-warning-modal {
    margin: auto;
    /*border: 1px solid rgba(0, 0, 0, 0.1);*/
}

.form--login {
    padding: 23px 30px;
    position: relative;
    bottom: 35px;
    form {
        width: 100%;
        padding: 0 20px;
    }
}

.user_card.bg-card-orange {
    background: red;
    transform: rotate(231deg);
    position: fixed;
    right: 33px;
    bottom: 183px;
    display: none;
}

.forgot-container {
    height: 50px;
    background: #e9ecef;
}

.sign_in-card.sign-in-left {
    background: #323c48 !important;
    height: 505px;
    width: 500px;
    top: 30px;
    left: 23px;
}

// Medium devices (tablets, 768px and up)
@media only screen and (min-width: 768px) {
    .sign_in-card.sign-in-left {
        margin-right: -5%;
    }
}

// Large devices (desktops, 992px and up)
@media only screen and (min-width: 992px) {
    .sign_in-card.sign-in-left {
        margin-right: -5%;
    }
}

// Extra large devices (large desktops, 1200px and up)
@media screen and (min-width: 1200px) {
    .sign_in-card.sign-in-left {
        margin-right: -5%;
    }
}

@media screen and (max-width: 1200px) {
    .sign_in-card.sign-in-left {
        margin-right: -4.5%;
    }
}

.sample{
	display:block;
}
